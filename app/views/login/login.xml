<Page class="p-login">
  <ActionBar title="Log in" class="action-bar" />
  <StackLayout
    orientation="vertical"
    class="main-container"
  >
    <Image
      class="p-login__logo"
      src="res://logo"
      stretch="none"
      horizontalAlignment="center"
    />

    <TextField
      class="form-control l-control"
      hint="Email"
      keyboardType="email"
      autocorrect="false"
      autocapitalizationType="none"
    />
    <TextField
      class="form-control l-control"
      hint="Password"
      secure="true"
    />

    <Button
      class="btn l-brand-btn"
      text="Sign in"
    />
    <Button
      class="link"
      text="Sign up for Groceries"
    />
  </StackLayout>
</Page>