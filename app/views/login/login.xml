<Page class="p-login" loaded="pageLoaded">
  <Page.actionBar>
    <ActionBar
      title="Sign in"
      class="action-bar"
    />
  </Page.actionBar>
  
  <StackLayout
    orientation="vertical"
    class="main-container"
  >
    <Image
      class="l-logo-start-screen"
      src="res://logo"
      stretch="none"
      horizontalAlignment="center"
    />

    <TextField
      id="email"
      class="form-control l-control"
      text="{{ email }}"
      hint="Email"
      keyboardType="email"
      autocorrect="false"
      autocapitalizationType="none"
    />
    <TextField
      class="form-control l-control"
      text="{{ password }}"
      hint="Password"
      secure="true"
    />

    <Button
      class="btn l-brand-btn"
      text="Sign in"
      tap="signIn"
    />
    <Button
      class="link"
      text="Sign up for Groceries"
      tap="register"
    />
  </StackLayout>
</Page>