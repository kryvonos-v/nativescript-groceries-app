<Page
  class="p-register"
  loaded="pageLoaded"
>
  <StackLayout class="main-container">
    <Image
      class="logo l-logo-start-screen"
      src="res://logo"
      stretch="none"
      horizontalAlignment="center"
    />

    <TextField
      class="form-control l-control"
      text="{{ email }}"
      id="email"
      hint="Email Address"
      keyboardType="email"
      autocorrect="false"
      autocapitalizationType="none"
    />
    <TextField
      class="form-control l-control"
      text="{{ password }}"
      secure="true"
      hint="Password"
    />

    <Button
      class="btn l-brand-btn"
      text="Sign Up"
      tap="register"
    />
  </StackLayout>
</Page>
