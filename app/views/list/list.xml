<Page
  class="p-grocery-list"
  loaded="pageLoaded"
>
  <Page.actionBar>
    <ActionBar
      class="action-bar"
      title="Groceries"
    >
      <ActionBar.actionItems>
        <ActionItem
          text="Share"
          ios.position="right"
          tap="share"
        />
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>

  <GridLayout
    rows="auto, *"
    columns="*"
  >
    <GridLayout
      row="0"
      col="0"
      rows="*"
      columns="*, auto"
      class="l-container u-separator--bottom"
    >
      <TextField
        row="0"
        col="0"
        id="groceryInput"
        text="{{ groceryName }}"
        hint="Entery a grocery name"
      />
      <Button
        row="0"
        col="1"
        class="l-add-btn"
        text="Add"
        tap="add"
        textWrap="true"
      />
    </GridLayout>

    <ListView
      row="1"
      col="0"
      id="groceryList"
      class="p-grocery-list__list"
      items="{{ groceryList }}"
      separatorColor="transparent"
    >
      <ListView.itemTemplate>
        <StackLayout
          class="l-container--horizontal u-separator--bottom"
        >
          <Label
            text="{{ name }}"
            horizontalAlignment="left"
            verticalAlignment="center"
          />
        </StackLayout>
      </ListView.itemTemplate>
    </ListView>

    <ActivityIndicator
      busy="{{ loading }}"
      rowSpan="2"
      colSpan="1"
    />
  </GridLayout>
</Page>