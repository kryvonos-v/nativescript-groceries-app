<Page
  class="p-grocery-list"
  loaded="pageLoaded"
>
  <GridLayout
    class="l-container"
    rows="auto, *"
    columns="*, auto"
  >
    <TextField
      id="groceryInput"
      text="{{ groceryName }}"
      hint="Entery a grocery name"
      row="0"
      col="0"
    />
    <Button
      text="Add"
      row="0"
      col="1"
      tap="add"
    />

    <ListView
      id="groceryList"
      class="p-grocery-list__list"
      items="{{ groceryList }}"
      row="1"
      colSpan="2"
      separatorColor="transparent"
    >
      <ListView.itemTemplate>
        <StackLayout class="u-separator--bottom">
          <Label
            text="{{ name }}"
            horizontalAlignment="left"
            verticalAlignment="center"
          />
        </StackLayout>
      </ListView.itemTemplate>
    </ListView>

    <ActivityIndicator
      busy="{{ loading }}"
      rowSpan="2"
      colSpan="2"
    />
  </GridLayout>
</Page>