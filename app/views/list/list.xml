<Page
  class="p-grocery-list"
  loaded="pageLoaded"
>
  <GridLayout rows="auto, *" columns="2*, *">
    <TextField
      id="groceryInput"
      text="{{ groceryName }}"
      hint="Entery a grocery name"
      row="0"
      col="0"
    />
    <Button
      text="Add"
      row="0"
      col="1"
      tap="add"
    />

    <ListView
      id="groceryList"
      class="p-grocery-list__list"
      items="{{ groceryList }}"
      row="1"
      colSpan="2"
    >
      <ListView.itemTemplate>
        <Label
          text="{{ name }}"
          horizontalAlignment="left"
          verticalAlignment="center"
        />
      </ListView.itemTemplate>
    </ListView>

    <ActivityIndicator
      busy="{{ loading }}"
      rowSpan="2"
      colSpan="2"
    />
  </GridLayout>
</Page>